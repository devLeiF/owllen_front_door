---
import Container from "./Container.astro";
---

<footer>
  <Container>
    <hr class="my-12 h-0.5 border-t-0 bg-neutral-100 dark:bg-white/10" />

    <div
      class="flex flex-wrap justify-center md:justify-between md:flex-nowrap pb-16"
    >
      <div class="flex w-full justify-center md:justify-between">
        <div class="text-gray-600 dark:text-gray-300 space-x-4">
          <a href="/privacy_policy" class="font-medium">Privacy Policy</a>
        </div>
      </div>
      <div class="flex pt-8 md:pt-0 md:pr-20 md:flex-row gap-4">
        <img src="./images/play_store.svg" alt="Get it on Google Play" />
        <img src="./images/app_store.svg" alt="Download on the App Store" />
      </div>
    </div>
  </Container>
</footer>
